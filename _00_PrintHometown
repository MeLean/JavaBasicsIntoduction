import java.util.Scanner;


public class PrintHometown {
/**Create a simple Java program PrintHometown.java (console application) to print the name of your hometown, 
 * compile and run it. Submit the source code as part of your homework*/
	
	public static void main(String[] args) {
		System.out.print("Please, enter your hometown: ");
		System.out.printf("%nYour hometown is %s.", inputStringReader());		
	}
	
	public static String inputStringReader() {
		Scanner input = new Scanner(System.in);
		String read = input.next();		
		return read;
	}
}
